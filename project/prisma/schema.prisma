generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Invoice {
  id         String   @id @default(cuid())
  customerId String
  amount     Int      // stored in cents
  status     String
  date       DateTime @default(now())
}
